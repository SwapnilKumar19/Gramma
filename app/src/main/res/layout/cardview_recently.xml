<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/recentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mallanna"
            android:text="Charles Duvane"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recentAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/mallanna"
            android:text="Paris, France"
            android:layout_marginStart="15dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recentName" />

        <TextView
            android:id="@+id/letterPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/mallanna"
            android:gravity="start"
            android:maxLines="10"
            android:text="Hello, Dani!\nI hope this letter finds you well.\nIt is wonderful to have some news from you.
I really appreciate what you wrote to me. I would say that my favourite day of the week is friday due to the
fact that I have an exciting feeling as the weekend is coming.

            \nHamare saath Shri Raghunath to kis baat ki chinta sharan me rakh diya jo math to kis baat ki chinta.
Kyu karte ho tum din raat bin baat ki chinta...\nHello, Dani!\nI hope this letter finds you well.\nIt is wonderful to have some news from you.
I really appreciate what you wrote to me. I would say that my favourite day of the week is friday due to the
fact that I have an exciting feeling as the weekend is coming.\nMy name is Anthony Gonsalvis.
            \nHamare saath Shri Raghunath to kis baat ki chinta, sharan me rakh diya jo math to kis baat ki chinta.
Kyu karte ho tum din raat bin baat ki chinta..."
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recentAddress" />




            <!--Change the bottom layout constraint of above textview-->


        <TextView
            android:id="@+id/recentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/mallanna"
            android:text="Today, 8:30 AM"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.642" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/recentDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <View
            android:id="@+id/view"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:background="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/audioImage"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/sound"
            app:layout_constraintEnd_toStartOf="@+id/stampImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/stampImage"
            android:layout_width="80dp"
            android:layout_height="144dp"
            android:layout_marginTop="-15dp"
            android:scaleType="fitXY"
            android:src="@drawable/stamp_music"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>